<content>
  <p><%= @application.name %></p>
  <p><%= @application.address %></p>
  <p><%= @application.city %></p>
  <p><%= @application.state %></p>
  <p><%= @application.zip %></p>
  <p><%= @application.phone_number %></p>
  <p><%= @application.description %></p>

  <% @application.pets.each do |pet| %>
    <section id = <%="#{pet.id}" %>>
        <%= link_to "#{pet.name}", "/pets/#{pet.id}" %>

        <% if !pet.accepted_app_id %>
          <%= link_to "Approve application for #{pet.name}", "/pets/#{pet.id}/#{@application.id}" %>
        <% else %>
          <%= link_to "Unapprove application for #{pet.name}", "/pets/#{pet.id}/#{@application.id}/revoke" %>
        <% end %>
    </section>
  <% end %>
</content>
