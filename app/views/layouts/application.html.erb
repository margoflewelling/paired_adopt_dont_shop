<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <nav>
    <ul class="nav_list">
      <li class="nav_link">
        <%= link_to "All Pets", "/pets" %>
      </li>
      <li class="nav_link">
        <%= link_to "All Shelters", "/shelters" %>
      </li>
      <li class = "nav_link">
        <div class="favorite">
        <%= link_to "My Favorites: #{favorite.total_count}", "/favorites" %>
        </div>
      </li>
    </ul>
  </nav>
  <% flash.each do |type, message| %>
    <p><%= message %></p>
  <% end %>
  <body>
    <%= yield %>
  </body>
</html>
