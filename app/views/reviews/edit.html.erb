<content>
  <h1>Edit Review</h1>
  <%= form_tag("/shelters/#{@review.shelter_id}/#{@review.id}", method: :patch) do %>
    <%= label_tag :title %>
    <%= text_field_tag :title, @review.title %>
    <br>
    <%= label_tag :rating %>
    <%= text_field_tag :rating, @review.rating %>
    <br>
    <%= label_tag :content %>
    <%= text_field_tag :content, @review.content %>
    <br>
    <%= label_tag :image %>
    <%= text_field_tag :image, @review.image %>
    <br>
    <%= submit_tag 'Save Review' %>
  <% end %>
</content>
